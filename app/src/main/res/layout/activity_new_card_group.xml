<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewCardGroupActivity">

    <ImageView
        android:id="@+id/new_card_group_cover"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/background_inbox"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp" />

    <TextView
        android:id="@+id/new_card_group_click_to_choose_cover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/click_to_choose_cover"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/new_card_group_cover"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


        <EditText
            android:id="@+id/new_card_group_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="16dp"
            android:layout_weight="5"
            android:gravity="center"
            android:hint="@string/input_card_group_title"
            android:inputType="text"
            android:textSize="22sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/new_card_group_click_to_choose_cover"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/new_card_group_save"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/new_card_group_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:text="@string/save_card"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/new_card_group_click_to_choose_cover"
            app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
